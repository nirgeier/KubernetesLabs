{
  "dashboard": {
    "id": null,
    "uid": "cluster-metrics-demo",
    "title": "Cluster Metrics - Demo",
    "tags": [
      "kubernetes",
      "cluster"
    ],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "10s",
    "panels": [
      {
        "type": "graph",
        "title": "CPU Usage (per pod)",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "sum(rate(demo_container_cpu_usage_seconds_total[5m])) by (pod)",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "datasource": "Prometheus"
      },
      {
        "type": "graph",
        "title": "Memory Usage (per pod)",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "sum(demo_container_memory_bytes) by (pod)",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "datasource": "Prometheus"
      },
      {
        "type": "stat",
        "title": "Number of Pods (all namespaces)",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "count(kube_pod_info{})",
            "refId": "A"
          }
        ],
        "datasource": "Prometheus"
      },
      {
        "type": "stat",
        "title": "Pods in monitoring namespace",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 8
        },
        "targets": [
          {
            "expr": "count(kube_pod_info{namespace=\"monitoring\"})",
            "refId": "A"
          }
        ],
        "datasource": "Prometheus"
      },
      {
        "type": "graph",
        "title": "HTTP Requests (per pod)",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 12
        },
        "targets": [
          {
            "expr": "sum(rate(demo_http_requests_total[5m])) by (pod)",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "datasource": "Prometheus"
      }
    ]
  },
  "overwrite": true
}